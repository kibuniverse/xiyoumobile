.wrapper {
  background-image: url('img.jpg');
  width: 100%;
  height: 300px;
  background-position: center center;
}
.member-router {
  display: flex;
  height: 60px;
  justify-content: center;
  align-items: center;
  align-content: center;
}
.member-router .member-item {
  font-size: 18px;
  margin: 0 20px;
  color: black;
}
.member-router .member-item:hover {
  color: #0b24b8;
}
.member-router .member-item::after {
  content: '';
  display: block;
  border-bottom: 5px solid #0b24b8;
  transform: scale(0.01, 1);
  transform-origin: 50% 0%;
  opacity: 0;
  transition: all 0.5s;
}
.member-router .member-item:hover::after {
  transition: transform 0.2s ease-out, opacity 0.2s ease-out;
  transform: scale(1, 1);
  opacity: 1;
}
.member-router .member-item-onclick::after {
  transform: scale(1, 1);
  opacity: 1;
  content: '';
  display: block;
  border-bottom: 5px solid #0b24b8;
  transform: scale(0.01, 1);
  transform-origin: 50% 0%;
  transition: all 0.5s;
}
.memberlist {
  width: 100%;
  height: 100%;
}
